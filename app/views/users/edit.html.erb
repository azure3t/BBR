<h1>Hey <%= @user.name %></h1>

 <form action="/users/<%= @user.id %>" method="post" role="form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
 <input type="hidden"name="_method"value="put">
  <p>
    <label for="name">Name</label>
    <input type="name" class="form-control" name="user[name]" value="<%= @user.name %>">
  </p>

  <p>
    <label for="email">Email</label>
    <input type="email" class="form-control" name="user[email]" value="<%= @user.email %>">
  </p>

  <p>

    <input type="hidden" class="form-control" name="user[password]" value="<%= @user.password_digest %>">
  </p>

  <button type="submit" class="btn btn-default">Update</button>
</form>


 <a href= "/users/<%= @user.id %>" data-method='delete'>Delete Account</a>
